<div class="well">
  <div class="question-info">
    <h2>{{model.question}}</h2>
    <h4>Topic: {{model.topic}}</h4>
    <p>{{model.desc}}</p>
    <h3>Written by: {{model.name}}</h3>
  </div>
  <div class="update-question">
    {{update-question question=model updateQuestion="updateQuestion"}}
  </div>
  <div class="delete-question">
    {{delete-question question=model deleteQuestion="deleteQuestion"}}
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="new-answer">
        <h2>Add an Answer</h2>
        {{new-answer question=model addAnswer="addAnswer"}}
      </div>
    </div>
    <div class="col-md-6">
      <div class="answers-list-div">
        <h2>Answers</h2>
        {{#if model.answers}}
          <ul class="answer-ul">
            {{#each model.answers as |answer|}}
              {{answer-tile answer=answer deleteAnswer="deleteAnswer"}}
            {{/each}}
          </ul>
        {{else}}
          <h3>No answers to show</h3>
        {{/if}}
      </div>
    </div>
  </div>
</div>
