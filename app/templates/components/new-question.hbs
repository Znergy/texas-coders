{{#if isFormShowing}}
<form id="newQuestionForm" action="index.html" method="post">
  <div class="form-group">
    <label for="name">Name</label>
    {{input class="form-control" value=name id=nameInput}}
  </div>
  <div class="form-group">
    <label for="topic">Topic</label>
    {{input class="form-control" value=topic id=topicInput}}
  </div>
  <div class="form-group">
    <label for="question">Question</label>
    {{input class="form-control" value=question id=questionInput}}
  </div>
  <div class="form-group">
    <label for="desc">Description</label>
    {{textarea class="form-control" value=desc id=descInput rows="3"}}
  </div>
  <button class="btn btn-success"{{action 'saveQuestion'}}>Post Question</button>
</form>
{{else}}
  <button class="btn btn-primary"{{action 'showForm'}}>Add Question</button>
{{/if}}
