{{#if isFormShowing}}
<form id="updateQuestionForm" action="index.html" method="post">
  <label for="name">Name</label>
  {{input value=name id=nameInput}}
  <label for="topic">Topic</label>
  {{input value=topic id=topicInput}}
  <label for="question">Question</label>
  {{input value=newQuestion id=questionInput}}
  <label for="desc">Description</label>
  {{input value=desc id=descInput}}
  <button {{action 'updateQuestion' question}}>Save</button>
</form>
{{else}}
  <button {{action 'showForm'}}>Update Question</button>
{{/if}}
