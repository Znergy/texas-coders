{{#if isFormShowing}}
<form id="updateQuestionForm" action="index.html" method="post">
  <label for="name">Name</label>
  {{input value=name placeholder=question.name id=nameInput}}
  <label for="topic">Topic</label>
  {{input value=topic placeholder=question.topic id=topicInput}}
  <label for="question">Question</label>
  {{input value=newQuestion placeholder=question.question id=questionInput}}
  <label for="desc">Description</label>
  {{input value=desc placeholder=question.desc id=descInput}}
  <button class="btn btn-success"{{action 'updateQuestion' question}}>Save</button>
</form>
{{else}}
  <button class="btn btn-primary"{{action 'showForm'}}>Update Question</button>
{{/if}}
